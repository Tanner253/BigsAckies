<%- include('partials/header', { csrfToken: locals.csrfToken || 'error-page-token' }) %>

<div class="max-w-3xl mx-auto text-center py-10">
  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="mb-6">
      <span class="inline-flex items-center justify-center h-24 w-24 rounded-full bg-red-100 mx-auto">
        <i class="fas fa-exclamation-triangle text-4xl text-red-600"></i>
      </span>
    </div>
    
    <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= status || 500 %> Error</h1>
    <p class="text-xl text-gray-600 mb-6"><%= message || 'Something went wrong' %></p>
    
    <% if (process.env.NODE_ENV !== 'production' && locals.error) { %>
      <div class="mt-6 p-4 bg-gray-100 rounded-md text-left overflow-auto max-h-80">
        <pre class="text-sm text-gray-800"><%= error.stack %></pre>
      </div>
    <% } %>
    
    <div class="mt-8">
      <a href="/" class="btn-primary inline-block">
        <i class="fas fa-home mr-2"></i> Return to Homepage
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 