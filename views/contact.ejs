<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-center">Contact Us</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="bg-green-600 h-4"></div>
        <div class="p-6">
          <h2 class="text-xl font-semibold mb-4">Send Us a Message</h2>
          <form action="/contact/submit" method="POST" class="space-y-4">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            
            <div>
              <label for="name" class="form-label">Your Name*</label>
              <input type="text" id="name" name="name" required class="form-input">
            </div>
            
            <div>
              <label for="email" class="form-label">Email Address*</label>
              <input type="email" id="email" name="email" required class="form-input">
            </div>
            
            <div>
              <label for="subject" class="form-label">Subject*</label>
              <select id="subject" name="subject" required class="form-input">
                <option value="">Please select a subject</option>
                <option value="Customer Support">Customer Support</option>
                <option value="Order Inquiry">Order Inquiry</option>
                <option value="Product Question">Product Question</option>
                <option value="Return/Refund">Return/Refund</option>
                <option value="Other">Other</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="form-label">Message*</label>
              <textarea id="message" name="message" rows="5" required class="form-input"></textarea>
            </div>
            
            <div>
              <button type="submit" class="btn-primary w-full">
                <i class="fas fa-paper-plane mr-2"></i> Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
      
      <div>
        <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
          <div class="bg-green-600 h-4"></div>
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-4">Contact Information</h2>
            <ul class="space-y-4">
              <li class="flex items-start">
                <span class="text-green-600 mr-3 mt-1"><i class="fas fa-map-marker-alt"></i></span>
                <span>
                  <strong class="block">Address:</strong>
                  123 Reptile Way<br>
                  Herp City, HC 12345<br>
                  United States
                </span>
              </li>
              
              <li class="flex items-start">
                <span class="text-green-600 mr-3 mt-1"><i class="fas fa-phone"></i></span>
                <span>
                  <strong class="block">Phone:</strong>
                  (555) 123-4567
                </span>
              </li>
              
              <li class="flex items-start">
                <span class="text-green-600 mr-3 mt-1"><i class="fas fa-envelope"></i></span>
                <span>
                  <strong class="block">Email:</strong>
                  <a href="mailto:info@reptileshop.com" class="text-green-600 hover:underline">info@reptileshop.com</a>
                </span>
              </li>
              
              <li class="flex items-start">
                <span class="text-green-600 mr-3 mt-1"><i class="fas fa-clock"></i></span>
                <span>
                  <strong class="block">Business Hours:</strong>
                  Monday - Friday: 9:00 AM - 6:00 PM<br>
                  Saturday: 10:00 AM - 4:00 PM<br>
                  Sunday: Closed
                </span>
              </li>
            </ul>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="bg-green-600 h-4"></div>
          <div class="p-6">
            <h2 class="text-xl font-semibold mb-4">Follow Us</h2>
            <div class="flex space-x-4">
              <a href="https://facebook.com" target="_blank" class="bg-blue-600 text-white w-10 h-10 rounded-full flex items-center justify-center hover:bg-blue-700 transition">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="https://twitter.com" target="_blank" class="bg-blue-400 text-white w-10 h-10 rounded-full flex items-center justify-center hover:bg-blue-500 transition">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="https://instagram.com" target="_blank" class="bg-pink-600 text-white w-10 h-10 rounded-full flex items-center justify-center hover:bg-pink-700 transition">
                <i class="fab fa-instagram"></i>
              </a>
              <a href="https://youtube.com" target="_blank" class="bg-red-600 text-white w-10 h-10 rounded-full flex items-center justify-center hover:bg-red-700 transition">
                <i class="fab fa-youtube"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-10">
      <div class="bg-green-600 h-4"></div>
      <div class="p-6">
        <h2 class="text-xl font-semibold mb-4">Find Us</h2>
        <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden">
          <!-- Replace with an actual Google Maps embed -->
          <div class="bg-gray-200 flex items-center justify-center h-64">
            <span class="text-gray-500">Map will be displayed here</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 