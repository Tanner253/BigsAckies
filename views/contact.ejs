<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold mb-8 text-center">Contact Us</h1>
    
    <!-- Flash Messages -->
    <% if (locals.messages) { %>
      <% if (messages.error) { %>
        <div class="mb-6 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline"><%= messages.error %></span>
          <button class="absolute top-0 bottom-0 right-0 px-4 py-3 alert-close">
            <i class="fas fa-times"></i>
          </button>
        </div>
      <% } %>
    <% } %>
    
    <div class="bg-white rounded-lg shadow-lg overflow-hidden transform hover:scale-[1.02] transition-transform duration-300">
      <div class="bg-green-600 h-4"></div>
      <div class="p-8">
        <h2 class="text-2xl font-semibold mb-6">Send Us a Message</h2>
        <form action="/message" method="POST" class="space-y-6">
          <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
          
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Your Name*</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors"
              placeholder="Enter your name"
            >
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address*</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors"
              placeholder="Enter your email"
            >
          </div>
          
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">Subject*</label>
            <select 
              id="subject" 
              name="subject" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors"
            >
              <option value="">Please select a subject</option>
              <option value="Customer Support">Customer Support</option>
              <option value="Order Inquiry">Order Inquiry</option>
              <option value="Product Question">Product Question</option>
              <option value="Return/Refund">Return/Refund</option>
              <option value="Other">Other</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message*</label>
            <textarea 
              id="message" 
              name="message" 
              rows="6" 
              required 
              class="w-full px-4 py-3 bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 hover:border-gray-400 transition-colors resize-y"
              placeholder="Type your message here..."
            ></textarea>
          </div>
          
          <div>
            <button type="submit" class="w-full py-4 px-6 bg-green-600 hover:bg-green-700 text-white text-lg font-medium rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2">
              <i class="fas fa-paper-plane"></i>
              <span>Send Message</span>
            </button>
          </div>
        </form>
      </div>
    </div>

    <div class="mt-8 text-center">
      <div class="flex justify-center space-x-4">
        <a href="https://instagram.com" target="_blank" class="bg-gradient-to-tr from-pink-600 to-purple-600 text-white w-12 h-12 rounded-full flex items-center justify-center hover:from-pink-700 hover:to-purple-700 transition-all duration-200 shadow-md">
          <i class="fab fa-instagram text-xl"></i>
        </a>
        <a href="https://youtube.com" target="_blank" class="bg-gradient-to-r from-red-600 to-red-700 text-white w-12 h-12 rounded-full flex items-center justify-center hover:from-red-700 hover:to-red-800 transition-all duration-200 shadow-md">
          <i class="fab fa-youtube text-xl"></i>
        </a>
      </div>
    </div>
  </div>
</div> 